    {\cf5\i # -- Instrucoes de seleccao alternativas ----------------------------------------}\par
\par
    {\cf8\b bool} admin {\cf4 =} {\cf8 true};\par
    \par
    {\cf5\i # Instrucao unless com apenas um statement}\par
    {\cf8 println}({\cf2 "}{\cf2 Administrador}{\cf2 "}) {\cf8\b unless} {\cf12\b not} admin;\par
    \par
    {\cf5\i # Instrucao unless com um ou mais statements}\par
    {\cf8\b do}:\par
        {\cf8 print}({\cf2 "}{\cf2 Admin}{\cf2 "});\par
        {\cf8 println}({\cf2 "}{\cf2 istrador}{\cf2 "});\par
    {\cf8\b unless} {\cf12\b not} admin;\par
    \par
    {\cf5\i # Expressao condicional com instrucao unica em caso de verdade (semelhante ao IF)}\par
    {\cf12\b not} admin{\cf4 ?} {\cf8 print}({\cf2 "}{\cf2 Not admin}{\cf2 "});\par
    \par
    {\cf5\i # Expressao condicional com instrucao unica em caso de verdade e falsidade}\par
    {\cf5\i # Equivale a:}\par
    {\cf5\i #    if admin: println("Admin!"); else: println("Not admin!"); end}\par
    {\cf5\i #}\par
    admin{\cf4 ?} {\cf8 println}({\cf2 "}{\cf2 Admin!}{\cf2 "}) : {\cf8 println}({\cf2 "}{\cf2 Not admin!}{\cf2 "});\par
{\cf8\b end}\par
