{\cf5\i # ______________ Exemplos de utilizacao de instrucoes condicionais __________________}\par
\par
{\cf8\b main}:\par
    {\cf8\b int} A {\cf4 =} {\cf4 1};\par
    {\cf8\b int} B {\cf4 =} {\cf4 2};\par
    \par
    {\cf8\b if} A {\cf4 ==} {\cf4 0} {\cf12\b or} B {\cf4 ==} {\cf4 0}:\par
        {\cf8 println}({\cf2 "}{\cf2 A == 0 ou B == 0}{\cf2 "});\par
    {\cf8\b else} {\cf8\b if} A {\cf4 ==} {\cf4 1} {\cf12\b and} B {\cf4 ==} {\cf4 1}:\par
        {\cf8 println}({\cf2 "}{\cf2 A == 1 e B == 1}{\cf2 "});\par
    {\cf8\b else} {\cf8\b if} A {\cf4 ==} {\cf4 1} {\cf12\b and} B {\cf4 ==} {\cf4 2}:\par
        {\cf8 println}({\cf2 "}{\cf2 A == 1 e B == 2}{\cf2 "});\par
    {\cf8\b else}:\par
        {\cf8 println}({\cf2 "}{\cf2 A maior que 2}{\cf2 "});\par
    {\cf8\b end}\par
    \par
